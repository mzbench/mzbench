{erl_opts, [
    {parse_transform, lager_transform},
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars
]}.

{deps, [
        {lager, ".*",
            {git, "https://github.com/erlang-lager/lager.git", {branch, "master"}}},
        {mongodb, ".*",
            {git, "https://github.com/comtihon/mongodb-erlang", {ref, "92dd0c2b73c6be78d4ab02b28968a10a08aa3ddf"}}}
        ]}.

{deps_dir, "deps"}.

{minimum_otp_vsn, "17.0"}.
