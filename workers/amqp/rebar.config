{erl_opts, [
    {parse_transform, lager_transform},
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    strict_validation,
    warn_export_vars,
    warn_exported_vars
]}.

{deps, [
        {lager, ".*",
            {git, "https://github.com/erlang-lager/lager.git", {branch, "master"}}},
        {xmerl, ".*",
            {git, "https://github.com/erlang-labs/xmerl", {tag, "1.3.3"}}},
        {amqp_client, ".*", {git, "https://github.com/jbrisbin/amqp_client.git", {tag, "rabbitmq-3.6.2"}}}
        ]}.

{deps_dir, "deps"}.

{minimum_otp_vsn, "17.0"}.
